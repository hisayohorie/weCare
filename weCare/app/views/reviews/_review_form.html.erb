
<%= form_for([@profile, @review]) do |f| %>
  <div class = "rating_form">
    <p>Rate a Robot you worked with!</p>
    <span class="star_rating">

        <%= f.label  :star_rating_1, class:"stars" do %>
          <i class="fa fa-star star"  aria-hidden="true" id="one-star"></i>
          <%= f.radio_button :star_rating, 1 %>
        <% end %>

        <%= f.label :star_rating_2, class:"stars" do %>
          <i class="fa fa-star star"  aria-hidden="true" id="two-star"></i>
          <%= f.radio_button :star_rating, 2 %>
     <% end %>

         <%= f.label  :star_rating_3, class:"stars" do %>
          <i class="fa fa-star star"  aria-hidden="true" id="three-star"></i>
          <%= f.radio_button :star_rating, 3 %>
        <% end %>

        <%= f.label :star_rating_4, class:"stars" do %>
          <i class="fa fa-star star"  aria-hidden="true" id="four-star"></i>
          <%= f.radio_button :star_rating, 4 %>
         <% end %>

       <%= f.label  :star_rating_5, class:"stars" do %>
          <i class="fa fa-star star"  aria-hidden="true" id="five-star"></i>
          <%= f.radio_button :star_rating, 5 %>
       <% end %>

    </span>

  </div>

  <div class = "review_description">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

<%= f.submit %>
<% end %>
