<h4>New Review</h4>
<%= form_for([@profile, @review]) do |f| %>
  <div class = "rating_form">
    <p>how you rate this robot?</p>
    <span class="star_rating">

      <%= f.label :star_rating %>
        <i class="fa fa-star star"  aria-hidden="true" id="one-star"></i>
      <%= f.radio_button :star_rating, 1, id: "rating-1" %>
      <%= f.label :star_rating %>
        <i class="fa fa-star star"  aria-hidden="true" id="two-star"></i>
      <%= f.radio_button :star_rating, 2, id: "rating-2"%>
      <%= f.label :star_rating %>
          <i class="fa fa-star star" aria-hidden="true" id="three-star"></i>
      <%= f.radio_button :star_rating, 3, id: "rating-3"%>
      <%= f.label :star_rating %>
        <i class="fa fa-star star" aria-hidden="true" id="four-star"></i>
      <%= f.radio_button :star_rating, 4, id: "rating-4"%>
      <%= f.label :star_rating %>
        <i class="fa fa-star star" aria-hidden="true" id="five-star"></i>
      <%= f.radio_button :star_rating, 5, id: "rating-5" %>
    </span>
  </div>
  <div class = "review_description">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

<%= f.submit %>
<% end %>
