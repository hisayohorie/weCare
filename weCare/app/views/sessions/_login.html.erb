<div class = "login_page">
  <h1>Log In</h1>
  <%= form_tag log_in_path, method: :post do %>
   <div class="form-group">
     <p><%= label_tag :email %></p>
     <p><%= email_field_tag :email, nil, class: 'form-control', required: true %></p>
   </div>

   <div class="form-group">
     <p><%= label_tag :password %></p>
     <p><%= password_field_tag :password, nil, class: 'form-control', required: true %></p>
   </div>

    <div class="form-group">
      <p><%= label_tag :remember_me %></p>
      <p><%= check_box_tag :remember_me %></p>
    </div>

   <%= submit_tag 'Log In', class: 'submit_button' %>
  <% end %>
</div>
