<h1>Sign Up</h1>


<%= form_for @user do |f| %>
<p><%= render 'shared/errors', object: @user %></p>

 <div class="form-group">
   <p><%= f.label :first_name %></p>
   <p><%= f.text_field :first_name, class: 'form-control', required: true %></p>
 </div>

 <div class="form-group">
   <p><%= f.label :last_name %></p>
   <p><%= f.text_field :last_name, class: 'form-control', required: true %></p>
 </div>

 <div class="form-group">
   <p><%= f.label :email %></p>
   <p><%= f.email_field :email, class: 'form-control', required: true %></p>
 </div>

 <div class="form-group">
   <p><%= f.label :password %></p>
   <p><%= f.password_field :password, class: 'form-control', required: true %></p>
 </div>
 <div class="form-group">
   <p><%= f.label :password_confirmation %></p>
   <p><%= f.password_field :password_confirmation, class: 'form-control', required: true %></p>
 </div>
 <%= f.submit 'Sign Up', class: 'submit_button' %>
<% end %>
