<h2><%= @user.first_name %>'s profile<h2>

  <div class="user_info">
    <ul>
      <li><%= @user.photo %></li>
      <li><%= @user.first_name %></li>
      <li><%= @user.last_name %></li>
      <li><%= @user.email %></li>
    </ul>
  </div>

<% if @user.profile %>
  <div class="user_profile">
    <ul>
      <li><%= @user.profile.age %></li>
      <li><%= @user.profile.description %></li>
      <li><%= @user.profile.exp_num %></li>
      <li><%= @user.profile.education %></li>
      <li><%= @user.profile.language %></li>
      <li><%= @user.profile.availability %></li>
      <li><%= @user.profile.transportation %></li>
      <li><%= @user.profile.pets %></li>
      <li><%= @user.profile.phone_number %></li>
      <li><%= @user.profile.address %></li>
      <li><%= @user.profile.rate %></li>
    </ul>
  </div>
<% end %>

  <div class = "bookings_you_made">
    <% @user.bookings.each do |b| %>
      <ul>
        <li><% b.profile.user.first_name %></li>
        <li><% b.profile.user.last_name %></li>
        <li><% b.start_time %></li>
        <li><% b.end_time %></li>
        <li><% b.confirmation %></li>
      </ul>
    <% end %>
  </div>


<% if @user.profile %>
  <div class="booking_request">
    <% @user.profile.bookings.each do |b| %>
      <%= b.user.first_name %><% b.user.last_name %>
      <%= b.address %>
      <%= b.user.email %>
      <%= b.start_time %>
      <%= b.end_time %>
    <span><%= b.confirmation %></span>
      <%= form_for [@user.profile, b] do |f|%>
      <%= f.hidden_field :confirmation, value: true %>
      <%= f.submit "Confirm Booking"%>
      <% end %>
    <% end %>
  </div>
<% end %>
