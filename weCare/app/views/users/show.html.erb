<div class = "user_show">
  <div class="user_info">
    <ul>
      <li><%= @user.photo %></li>
      <h1><%= @user.first_name.capitalize %></h1>
      <h1><%= @user.last_name.capitalize %></h1>
      <li><%= @user.email %></li>
    </ul>
  </div>


    <% if @user.profile %>
    <div class = "user_info" id ="user_profile">
      <ul>
        <li>Description:<%= @user.profile.description %></li>
        <li>Experience: <%= @user.profile.exp_num %></li>
        <li>Education: <%= @user.profile.education %></li>
        <li>Languages: <%= @user.profile.language %></li>
        <li>Availability: <%= @user.profile.availability %></li>
        <li>Transportation: <%= @user.profile.transportation %></li>
        <li>Comfortable with Pets: <%= @user.profile.pets %></li>
        <li>Phone Number:<%= @user.profile.phone_number %></li>
        <li>Addres: <%= @user.profile.address %></li>
        <li>Rate: <%= @user.profile.rate %>></li>
      </ul>
    <% end %>
    </div>

  <% if @user.bookings %>
  <div class = "user_info" id = "bookings_you_made">
    <h1>Your bookings:</h1>
    <% @user.bookings.each do |b| %>
      <ul>
        <li>First Name: <%= b.profile.user.first_name %></li>
        <li>Last Name: <%= b.profile.user.last_name %></li>
        <li>Start Time: <%= b.start_time %></li>
        <li>End Time: <%= b.end_time %></li>
        <li>Confirmed: <%= b.confirmation %></li>
      </ul>
    <% end %>
    <% else %>
    <p>No bookings made yet</p>
  <% end %>
  </div>

  <% if @user.profile %>
  <div class= "user_info" id = "booking_request">
    <h1>Bookings requested for you:</h1>
    <% @user.profile.bookings.each do |b| %>
      <p>Name: <%= b.user.first_name %><% b.user.last_name %></p>
      <p>Address: <%= b.address %></p>
      <p>Email: <%= b.user.email %></p>
      <p>Start Time: <%= b.start_time %></p>
      <p>End Time: <%= b.end_time %></p>
      <span><%= b.confirmation %></span>
      <%= form_for [@user.profile, b] do |f|%>
      <%= f.hidden_field :confirmation, value: true %>
      <%= f.submit "Confirm Booking"%>
      <% end %>
    <% end %>
  <% end %>

  </div>
</div>
